@model ArtistEditSongModel
@{
    ViewData["Title"] = "CreateSong";
    Layout = "~/Areas/Artist/Views/ArtistLayout/Index.cshtml";
}

<h3>Yeni Şarkı Oluşturma Sayfası</h3>

<form method="post" enctype="multipart/form-data">
    <label>Şarkı Adı</label>
    <input type="text" asp-for="SongName" class="form-control" />
    <br />
    <label>Şarkı Kapak Resmi</label>
    <input type="file" asp-for="SongImageUrl" class="form-control" />
    <br />
    <label>Şarkı Dosyası</label>
    <input type="file" asp-for="SongFile" class="form-control" />
    <br />
    @Html.DropDownListFor(x => x.AlbumId, (List<SelectListItem>)ViewBag.Albums, "Lütfen Albüm Seçiniz.", new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-primary">Kaydet</button>
</form>

