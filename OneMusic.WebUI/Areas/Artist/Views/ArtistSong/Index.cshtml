@model List<Song>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Artist/Views/ArtistLayout/Index.cshtml";
}

<h3>Şarkılarım</h3>

@{
    int count = 0;
}
<table class="table table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Şarkı Adı</th>
        <th>Albüm Adı</th>
        <th>Müzik</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>  <img src="/images/@item.SongImageUrl" style="height:75px;width:75px" />  </td>
            <td>@item.SongName</td>
             <td>@item.Album.AlbumName</td> 
             <td>
                <audio preload="auto" controls>
                    <source src="/audio/@item.SongUrl">
                </audio>
             </td>

            <td>
                <button class="btn btn-outline-danger" onclick="deleteMySong(@item.SongId)">Sil</button>
                <a class="btn btn-outline-info" asp-action="UpdateSong" asp-route-id="@item.SongId">Güncelle</a>

            </td>
        </tr>
    }

</table>

<a class="btn btn-outline-primary" asp-action="CreateSong">Yeni Şarkı Kaydet</a>



<script>

    function deleteMySong(id) {

        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {

                window.location.href = "/Artist/ArtistSong/DeleteSong/" + id;

            }
        });

    }


</script>