@model List<Album>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int sayi = 0;
}

<h3>Albümler</h3>
<table class="table table-bordered table-hover">
	<tr>

		<th>#</th>
		<th>Resim</th>
		<th>Albüm Adı</th>
		<th>Şarkıcı</th>
		<th>Fiyat</th>
	</tr>
	@foreach (var item in Model)
	{
		sayi++;
		<tr>
			<td>@sayi</td>
			<td><img src="@item.CoverImage" style="height:75px; width:75px;" /></td>
			<td>@item.AlbumName</td>
			@* <td>@item.AppUser.Name @item.AppUser.Surname</td> *@
			<td>@item.Price</td>
			<td>
				<button class="btn btn-outline-danger" onclick="deleteAlbum(@item.AlbumId)">Sil</button>
				<a class="btn btn-outline-info" asp-action="UpdateAlbum" asp-route-id="@item.AlbumId">Güncelle</a>
			</td>
		</tr>
	}
</table>
<a class="btn btn-outline-primary" asp-action="CreateAlbum">Yeni Albüm Oluştur</a>

<script>
	function deleteAlbum(id) {
		Swal.fire({
			title: "Silmek istediğinize emin misiniz?",
			text: "Bu işlemi geri alamazsınız!",
			icon: "warning",
			showCancelButton: true,
			confirmButtonColor: "#3085d6",
			cancelButtonColor: "#d33",
			confirmButtonText: "Evet, Sil!",
			cancelButtonText: "İptal"
		}).then((result) => {
			if (result.isConfirmed) {

				window.location.href = "/AdminAlbum/DeleteAlbum/" + id;

			}

		});
	}
</script>


